{% extends 'base.html.twig' %}

{% block title %}Carte{% endblock %}

{% block body %}
    <h1>Carte</h1>

    <div class="container">
        <div class="card" style="width: 18rem; height: 15rem">
            <div class="card-body" style="
                    text-align: center;
            {% if card.color is null %}
                    background-color: white;
            {% elseif card.color == 0 %}
                    background-color: yellow;
            {% elseif card.color == 1 %}
                    background-color: indianred;
            {% else %}
                    background-color: darkgreen;
            {% endif %}
                    ">
                <div style="border-bottom: 2px black solid; text-align: center; margin-bottom: 10px">
                    <h5 class="card-title">{{ card.title}}</h5>
                </div>
                <p class="card-text">{{ card.text}}</p>
            </div>
        </div>
        <br>

        <a class="btn btn-primary" href="{{ path('app_card_index') }}">Retour a la liste</a>

        <a class="btn btn-warning" href="{{ path('app_card_edit', {'id': card.id}) }}">Modifier</a>

        {{ include('card/_delete_form.html.twig') }}
    </div>
{% endblock %}
