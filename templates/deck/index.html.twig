{% extends 'base.html.twig' %}

{% block title %}Liste Deck{% endblock %}

{% block body %}
    <h1>Liste Deck</h1>
    <br>
    <a class="btn btn-success" href="{{ path('app_deck_new') }}">Nouveau deck</a>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deck in decks %}
            <tr>
                <td>{{ deck.title }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_deck_show', {'id': deck.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('app_deck_edit', {'id': deck.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
