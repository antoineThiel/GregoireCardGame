{% extends 'base.html.twig' %}

{% block title %}Deck{% endblock %}

{% block body %}
    <h1>Deck</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ deck.title }}</td>
            </tr>
            <tr>
                <th>Cartes</th>
                <td>
                {% for card in deck.cards %}
                    <p>Carte : {{ card.title }}</p>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_deck_index') }}">Retour a la liste</a>

    <a href="{{ path('app_deck_edit', {'id': deck.id}) }}">Modifier</a>

    {{ include('deck/_delete_form.html.twig') }}
{% endblock %}
